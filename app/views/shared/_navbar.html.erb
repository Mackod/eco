<div class="navbar navbar-expand-sm navbar-lewagon">
  <%= link_to "posts", class: "navbar-brand" do %>
    <div class="title"> <%= image_tag "ENGAGELOGO.png", class: "logo" %> ENGAGE</div>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <%= form_tag posts_path, method: :get, class: "search-bar" do %>
    <input name="query" id="query" type="text" class="useFontAwesomeFamily" placeholder="&#xf002">
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <i class="fas fa-user dropdown-toggle" id="navbarDropdown" data-toggle="dropdown"></i>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <button class="li-signup" id="modal-btn">S'identifier</button>
          <%= render "devise/shared/login_form" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
